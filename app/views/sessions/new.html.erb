<% provide(:title, I18n.t('nav.signin')) %>
<h1><%= I18n.t('nav.signin') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email, I18n.t('activerecord.attributes.user.email') %>
      <%= f.text_field :email %>
      <%= f.label :password, I18n.t('activerecord.attributes.user.password') %>
      <%= f.password_field :password %>
      <%= f.submit I18n.t('button.signin'), class: "btn btn-large btn-primary" %>
    <% end %>
    <p><%= I18n.t('pages.signup.new_user_q') %>
       <%= link_to I18n.t('nav.signup_now'), signup_path %></p>
  </div>
</div>
