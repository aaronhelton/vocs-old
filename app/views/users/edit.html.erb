<% provide(:title, I18n.t('nav.edit_user')) %>
<h1><%= I18n.t('pages.edit.update_profile') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, I18n.t('activerecord.attributes.user.password_confirmation') %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit I18n.t('button.save_changes'), class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails"><%= I18n.t('external.gravatar.change') %></a>
  </div>
</div>
